<Window x:Class="AppUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="189"/>
            <ColumnDefinition Width="167*"/>
            <ColumnDefinition Width="444*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="66*"/>
            <RowDefinition Height="66*"/>
            <RowDefinition Height="66*"/>
            <RowDefinition Height="132*"/>
            <RowDefinition Height="67*"/>
        </Grid.RowDefinitions>
        <Button Content="-" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Margin="107,38,0,0" Height="20" Grid.RowSpan="2" Grid.Column="1" Click="Button_Quitar"/>
        <Button Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Margin="19,38,0,0" Grid.Row="1" Height="20" Grid.Column="1" Click="Button_Añadir"/>
        <Button Content="Izquierda" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="331,38,0,0" Grid.Column="2" Height="20" Click="Button_Izquierda" Grid.Row="1"/>
        <Button x:Name="ButtonDerecha" Content="Derecha" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="44,38,0,0" Grid.Column="2" Grid.Row="1" Height="20" Click="ButtonDerecha"/>
        <TextBox x:Name="TextBox_Nombre" Grid.Column="2" HorizontalAlignment="Left" Margin="44,0,0,0" Grid.Row="2" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="200" Height="18" TextChanged="TextBox_Nombre_TextChanged" ContextMenuClosing="TextBox_ShowNombre"/>
        <TextBox x:Name="TextBox_Edad" Grid.Column="2" HorizontalAlignment="Left" Margin="44,0,0,0" Grid.Row="3" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="200" Height="18" ContextMenuClosing="TextBox_ShowEdad"/>
        <TextBox x:Name="TextBox_Descripcion" Grid.Column="2" HorizontalAlignment="Left" Margin="44,0,0,0" Grid.Row="4" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="200" Height="88" ContextMenuClosing="TextBox_ShowDescripc"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Right" Margin="0,27,38,0" Grid.Row="3" TextWrapping="Wrap" Text="Edad:" VerticalAlignment="Top" Width="48" Height="16"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="81,27,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Nombre:" VerticalAlignment="Top" Height="16" Width="64"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Right" Margin="0,29,20,0" Grid.Row="4" TextWrapping="Wrap" Text="Descripción:" VerticalAlignment="Top" Height="16" Width="66"/>
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="186,40,0,0" Grid.Row="1" TextWrapping="Wrap" Text="ID:" VerticalAlignment="Top" Height="16" Width="14"/>
        <TextBox x:Name="Textbox_ID" Grid.Column="2" HorizontalAlignment="Left" Margin="211,40,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="48" TextChanged="TextBox_TextChanged" Height="18" ContextMenuClosing="TextBox_ShowID"/>

    </Grid>
</Window>
