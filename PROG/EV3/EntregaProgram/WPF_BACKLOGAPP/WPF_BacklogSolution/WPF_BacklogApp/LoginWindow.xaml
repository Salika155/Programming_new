<Window x:Class="WPF_BacklogApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Background="#FAFAFA">
        <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="10" Padding="20" Background="DarkGray" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Inicia Sesión" FontSize="20" FontWeight="Bold" Foreground="Black" Margin="0,0,0,20" TextAlignment="Center"/>

                <TextBlock Text="Email" Margin="10,5,10,0"/>
                <TextBox x:Name="EmailTextBox" Width="200" Margin="10,0,10,10" Padding="5"/>

                <TextBlock Text="Password" Margin="10,5,10,0"/>
                <PasswordBox x:Name="PasswordBox" Width="200" Margin="10,0,10,20" Padding="5"/>

                <Button Content="Login" Width="100" Margin="10" Click="LoginButton_Click" Background="white" Foreground="Gray" Padding="5"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
